{
  "name": "pg-mobile-app",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "typecheck": "tsc --noEmit",
    "typecheck:watch": "tsc --noEmit --watch",
    "start": "expo start",
    "start:dev": "expo start --dev-client",
    "prestart": "npm run typecheck",
    "android": "expo run:android",
    "preandroid": "npm run typecheck",
    "ios": "expo run:ios",
    "preios": "npm run typecheck",
    "web": "expo start --web",
    "lint": "tsc --noEmit && eslint . --ext .ts,.tsx",
    "clean": "powershell -Command \"Remove-Item -Recurse -Force @('android/app/.cxx', 'android/app/build', 'android/build', 'node_modules/.cache') -ErrorAction SilentlyContinue; Write-Host '✅ Build artifacts cleaned!' -ForegroundColor Green\"",
    "clean:deep": "powershell -Command \"Remove-Item -Recurse -Force @('android/app/.cxx', 'android/app/build', 'android/build', 'android/.gradle', 'node_modules/.cache', '.expo') -ErrorAction SilentlyContinue; Write-Host '✅ Deep clean completed!' -ForegroundColor Green\"",
    "clean:all": "powershell -Command \"Remove-Item -Recurse -Force @('android/app/.cxx', 'android/app/build', 'android/build', 'android/.gradle', 'node_modules', 'node_modules/.cache', '.expo') -ErrorAction SilentlyContinue; Write-Host '✅ Full clean completed! Run npm install' -ForegroundColor Yellow\"",
    "build:clean": "npm run clean && cd android && .\\gradlew assembleRelease",
    "build:dev": "eas build -p android --profile development",
    "build:apk": "eas build -p android --profile apk",
    "build:aab": "eas build -p android --profile production",
    "build:standalone": "eas build -p android --profile standalone-apk",
    "build:minimal": "eas build -p android --profile minimal-apk"
  },
  "dependencies": {
    "@expo/metro-runtime": "~6.1.2",
    "@expo/vector-icons": "^15.0.2",
    "@react-native-async-storage/async-storage": "2.2.0",
    "@react-native-community/datetimepicker": "8.4.4",
    "@react-navigation/bottom-tabs": "^6.5.11",
    "@react-navigation/native": "^6.1.9",
    "@react-navigation/native-stack": "^6.9.17",
    "@reduxjs/toolkit": "^2.0.1",
    "expo": "~54.0.30",
    "expo-blur": "~15.0.8",
    "expo-constants": "~18.0.10",
    "expo-dev-client": "~6.0.20",
    "expo-device": "~8.0.10",
    "expo-file-system": "^19.0.17",
    "expo-font": "~14.0.10",
    "expo-image-picker": "~17.0.10",
    "expo-linear-gradient": "~15.0.8",
    "expo-notifications": "~0.32.15",
    "expo-sensors": "~15.0.8",
    "expo-sharing": "~14.0.8",
    "expo-status-bar": "~3.0.9",
    "expo-updates": "~29.0.15",
    "nativewind": "^2.0.11",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-native": "0.81.5",
    "react-native-reanimated": "~4.1.1",
    "react-native-safe-area-context": "~5.6.0",
    "react-native-screens": "~4.16.0",
    "react-native-view-shot": "^4.0.3",
    "react-native-web": "^0.21.0",
    "react-native-webview": "13.15.0",
    "react-native-worklets": "0.5.1",
    "react-redux": "^9.0.4",
    "redux-persist": "^6.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.20.0",
    "@react-native-community/cli": "^19.0.0",
    "@types/react": "~19.1.10",
    "babel-plugin-module-resolver": "^5.0.2",
    "tailwindcss": "3.3.2",
    "typescript": "^5.1.3"
  },
  "private": true
}
